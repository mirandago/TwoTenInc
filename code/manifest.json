
{
   "manifest_version": 2,
   "version": "1.0",
   "name": "Caffeinated Coders Pomodoro Timer",
   "description": "Pomodoro Timer with task lists and notifications",
 
   "icons": { "16": "img/icon16.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" },
   
   "permissions": [
    "activeTab",
    "storage",
    "notifications"
   ],
   "browser_action":
   {
       "default_popup": "popup.html"
   },
   "background": {
       "page": "background.html",
       "persistent": false
   },
   "content_security_policy": "script-src 'self' https://cdn.staticfile.org; object-src 'self'"
} 

